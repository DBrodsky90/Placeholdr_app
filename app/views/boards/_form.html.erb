<%= form_for @board do |f| %>
  <%= f.label :name %> <br>
  <%= f.text_field :name %> <br>

  <%= f.label :theme %> <br>
  <%= f.text_field :theme %> <br>


  <%= f.radio_button(:public, true) %> <br>
  <%= f.label(:public, "Public") %> <br>

  <%= f.radio_button(:public, false) %> <br>
  <%= f.label(:public, "Private") %> <br>

  <br>
    <%= f.submit %>

<% end %>