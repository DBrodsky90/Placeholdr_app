<h1>
	<%= @board.name %>
</h1>

<h3>
	Created by: <%= @board.user.first_name %><br>

	<% if @board.public == true %>
		<%= @board.name %> Board is public.
	<% else %>
		<%= @board.name %> This Board is private.
	<% end %>
</h3>

<% @board.images.each do |image| %> 
<!-- makes the image a link to that images image show page -->
	<%= link_to(image_path(image)) do %>
		<img src="<%= image.imgurl %>">
	<% end %>
<% end %>
<br>

<%= render partial: 'buttons', locals: {new_board: false, edit_board: true} %><br>