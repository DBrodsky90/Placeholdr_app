<!-- this form will be used to add a new user and to edit an existing user -->
<%= form_for @user do |f| %>
  <div class="input">
    <%= f.label :username %><br>
    <%= f.text_field :username %><br>
  </div>

  <div class="input">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %><br>
 </div>
  
  <div class="input">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %><br>
 </div>
  
  <div class="input">
    <%= f.label :avatar %><br>
    <%= f.text_field :avatar %><br>
 </div>
  
<% if new_user %>
  <div class="input">
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
 </div>
  
  <div class="input">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %><br>
  </div>
<% end %>

  <%= f.submit "Create User", :id=>"submit" %>
<% end %>