<div class="left">
	<img src="<%= image[:MediaUrl] %>">
	<div class="url_box">
		<span>Image URL:</span>
		<input type="text" name="url" value="<%= image[:MediaUrl] %>" readonly>
	</div>
</div>

<div class="right">
	<p>
		<span>Image Title:</span> <%= image[:Title] %><br>
		<span>Width:</span> <%= image[:Width] %><br> 
		<span>Height:</span> <%= image[:Height] %><br>
		<span>File Type:</span> <%= image[:ContentType] %><br>

		<% if logged_in %>
			<span>Select Image:</span> <%= check_box_tag("selected_images[]", "image#{index}") %>
							<%= hidden_field "image#{index}", :title, :value => image[:Title] %>
							<%= hidden_field "image#{index}", :imgurl, :value => image[:MediaUrl] %>
							<%= hidden_field "image#{index}", :width, :value => image[:Width] %>
							<%= hidden_field "image#{index}", :height, :value => image[:Height] %>
							<%= hidden_field "image#{index}", :filesize, :value => image[:FileSize] %>
		<% end %>
	</p>
</div>